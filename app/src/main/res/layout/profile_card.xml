<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <ImageView
                    android:id="@+id/profile_card_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/person"
                    />
            
            <TextView
                    android:id="@+id/profile_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_card_imageview"
                    android:text="Tylor Garrett"
                    android:gravity="center"
                    />

            <TextView
                    android:id="@+id/profile_card_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_card_name"
                    android:text="Here's my description. I might need a little help writing it!"
                    android:gravity="center"
                    />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>